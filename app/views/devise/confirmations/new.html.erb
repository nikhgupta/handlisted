<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }, builder: UserFormBuilder) do |f| %>
  <div class="panel-body bg-light p30">
    <div class="row">
      <div class="col-sm-7 pr30">
        <%= devise_error_messages! %>

        <%= f.text_field :login, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: "Email or Username", class: "gui-input", icon: "user",
          required: true, minlength: 4 %>
      </div>
      <div class="col-sm-5 devise-aside">
        <%= link_to "Log in", new_user_session_path, class: "btn btn-sm btn-primary" %>
        or
        <%= link_to "Register", new_user_registration_path, class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
  <div class="panel-footer clearfix p10 ph15">
    <%= f.submit 'Resend confirmation instructions', class: "pull-left" %>
  </div>
<% end %>
