<p class="p-t-35">Sign up for your <strong>Handlisted</strong> account</p>
<%= devise_error_messages! %>
<%= render 'devise/shared/omniauth_links' %>
<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "p-t-15", role: "form" } do |f| %>
  <div class="form-group form-group-default">
    <%= f.label :username %>
    <div class="controls">
      <%= f.text_field :username, autofocus: true, placeholder: "How would you like to be known?", class: "form-control", required: true, minlength: 4, maxlength: 20, allowed: "alphabets and numbers" %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <%= f.label :name %>
    <div class="controls">
      <%= f.text_field :name, autofocus: false, placeholder: "Your name", class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <%= f.label :email %>
    <div class="controls">
      <%= f.text_field :email, autofocus: false, placeholder: "Your Email", class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <%= f.label :password do %>
      <% if @minimum_password_length %>
        Password <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% else %>
        Password
      <% end %>
    <% end %>
    <div class="controls">
      <%= f.password_field :password, placeholder: "Password", required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group form-group-default">
    <%= f.label :password_confirmation %>
    <div class="controls">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true, class: "form-control" %>
    </div>
  </div>

  <%= f.submit "Sign up", class: "btn btn-primary btn-cons m-t-10" %>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-primary btn-cons m-t-10" %>
<% end %>
