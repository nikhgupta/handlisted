<%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: UserFormBuilder) do |f| %>
  <div class="panel-body p25 bg-light">
    <div class="section row hidden">
      <%= render "devise/shared/omniauth_links" %>
    </div>
    <%= devise_error_messages! %>
    <div class="section row">
      <div class="col-md-6">
        <%= f.text_field :username, autofocus: true, placeholder: "How would you like to be known?", class: "gui-input", icon: 'user', required: true, minlength: 4, maxlength: 20, allowed: "alphabets and numbers" %>
      </div>
      <div class="col-md-6">
        <%= f.label_for_profile %>
      </div>
    </div>

    <div class="section row">
      <div class="col-md-6">
        <%= f.text_field :name, placeholder: "Your name?", class: "gui-input", icon: 'user', required: true %>
      </div>
      <div class="col-md-6">
        <%= f.email_field :email, placeholder: "Enter email", class: "gui-input", icon: 'envelope', required: true, email: true %>
      </div>
    </div>
    <div class="section row">
      <div class="col-md-6">
        <%= f.password_field :password, autocomplete: 'off', class: "gui-input", icon: 'lock', required: true, minlength: 8, maxlength: 32,
          label: (@minimum_password_length ? "Password <small>(#{@minimum_password_length} characters minimum)</small>" : nil) %>
      </div>
      <div class="col-md-6">
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: "gui-input", icon: 'lock', required: true, minlength: 8, maxlength: 32, equalTo: '#user_password' %>
      </div>
    </div>
    <div class="section visible-xs-block text-center">
      <%= f.switch_box :i_agree_to_the_terms_and_conditions, checked: true %>
    </div>

  </div>
  <div class="panel-footer clearfix p10 ph15">
    <%= f.switch_box :i_agree_to_the_terms_and_conditions, checked: true, label_html: { class: "hidden-xs pull-left" } %>
    <%= f.submit 'Sign up' %>
  </div>
<% end %>
