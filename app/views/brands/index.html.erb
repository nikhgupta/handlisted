<div class="brand-header bg-alert">
  <h3>Available Brands on <%= @merchant.name.titleize %></h3>
</div>
<div class="row brand-index">
  <% @brands.each do |brand| %>
    <div class="col-xxs-12 col-xs-6 col-sm-4 col-md-3 card-container">
      <% cover = brand.cover_product %>
      <%= render "brands/card", brand: brand,
        product_presenter: present(cover) if cover.present? %>
    </div>
  <% end %>
</div>
<div class="paginator"> <%= paginate @brands %> </div>
