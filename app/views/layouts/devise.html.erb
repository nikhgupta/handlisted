<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Curated Shop</title>

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
    <%= javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js" %>
  <![endif]-->

  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700', media: 'screen' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="external-page sb-l-c sb-r-c">
  <!-- Start: Main -->
  <div id="main" class="animated fadeIn">

    <!-- Start: Content-Wrapper -->
    <section id="content_wrapper">

      <div id="canvas-wrapper" style="height: 455px;">
        <%# TODO: change 'demo-canvas' id in js file for CanvasBG %>
        <canvas id="demo-canvas" width="1440" height="455"></canvas>
      </div>

      <!-- Begin: Content -->
      <section id="content">

        <div class="admin-form theme-info" id="user-forms">

          <div class="row mb15 table-layout">
            <div class="col-xs-6 va-m pln">
              <%= link_to image_logo_tag(class: "img-responsive w250"), root_path, title: "Return to Homepage" %>
            </div>
            <div class="col-xs-6 text-right va-b pr5">
              <div class="login-links">
                <%= link_to "Sign In", new_user_session_path, class: "active", title: "Sign In" %>
                <span class="text-white"> | </span>
                <%= link_to "Register", new_user_registration_path, class: "", title: "Register In" %>
              </div>
            </div>
          </div>

          <div class="panel panel-info mt10 br-n">

            <div class="panel-heading heading-border bg-white">
              <span class="panel-title hidden"> <%= fa_icon('sign-in') %>Register</span>
              <div class="section row mn">
                <%= render "devise/shared/omniauth_links", locals: { col_size: "sm" } %>
              </div>
            </div>

            <!-- end .form-header section -->
            <%= yield %>
          </div>
        </div>

      </section>
      <!-- End: Content -->

    </section>
    <!-- End: Content-Wrapper -->

  </div>
  <!-- End: Main -->
</body>
</html>

