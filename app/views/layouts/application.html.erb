<!DOCTYPE html>
<html>
  <%= render "layouts/application/head" %>
  <body class="fixed-header menu-behind <%= 'pages' if static_page? %>">
    <%# <%= render "layouts/application/sidebar" %1> %>

    <%= render "layouts/application/header" %>

    <div class="page-container">
      <% if static_page? %>
        <%= yield %>
      <% else %>
        <div class="page-content-wrapper">
          <div class="content sm-gutter">
            <%# <%= yield :primary_box %1> %>
            <div class='container-fluid padding-25 sm-padding-10'>
              <%= render 'layouts/application/notices' %>
              <%= yield %>
            </div>
          </div>
        </div>
        <%= render "layouts/application/quickview" %>
      <% end %>

      <%= render "layouts/application/footer" %>
      <%= render "layouts/application/search" %>
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true, 'data-turbolinks-eval' => false %>
  </body>
</html>
