<style data-roadie-ignore>
  @media only screen and (min-device-width: 481px) {
    td.logo span.title { font-size: 2em !important; }
    td.logo span.version { font-size: 1em !important; }
    p.linked a { font-size: 1.4em !important; }
  }

  @media only screen and (min-device-width: 601px) {
    p { text-align: justify; }
    p.linked { text-align: center; }
  }

  @media only screen and (max-device-width: 480px) {
    a[href^="tel"], a[href^="sms"] {
      text-decoration: none;
      color: #0f7fcf; /* or whatever your want */
      pointer-events: none;
      cursor: default;
      font-weight: bold;
    }

    .mobile_link a[href^="tel"], .mobile_link a[href^="sms"] {
      text-decoration: default;
      color: #0f7fcf !important; /* or whatever your want */
      pointer-events: auto;
      cursor: default;
      font-weight: bold;
    }
  }

  @media only screen and (min-device-width: 768px) and (max-device-width: 1024px) {
    /* You guessed it, ipad (tablets, smaller screens, etc) */

    /* Step 1a: Repeating for the iPad */
    a[href^="tel"], a[href^="sms"] {
      text-decoration: none;
      color: #0f7fcf; /* or whatever your want */
      pointer-events: none;
      cursor: default;
      font-weight: bold;
    }

    .mobile_link a[href^="tel"], .mobile_link a[href^="sms"] {
      text-decoration: default;
      color: #0f7fcf !important;
      pointer-events: auto;
      cursor: default;
      font-weight: bold;
    }
  }

  @media only screen and (-webkit-min-device-pixel-ratio: 2) {
    /* Put your iPhone 4g styles in here */
  }

  /* Following Android targeting from: http://developer.android.com/guide/webapps/targeting.html */
  @media only screen and (-webkit-device-pixel-ratio:.75){
    /* Put CSS for low density (ldpi) Android layouts in here */
  }
  @media only screen and (-webkit-device-pixel-ratio:1){
    /* Put CSS for medium density (mdpi) Android layouts in here */
  }
  @media only screen and (-webkit-device-pixel-ratio:1.5){
    /* Put CSS for high density (hdpi) Android layouts in here */
  }
  /* end Android targeting */
</style>
