<%= render "profile_box", presenter: current_user, liked: @liked, found: @found %>

<div class="row admin-form">
  <div class="col-md-4">
    <%= render 'omniauth_identities' %>
  </div>
  <div class="col-md-8">
    <%= render 'profile_editing_form' %>
  </div>
</div>

<hr/>

<div class="row">
  <div class="col-md-12 text-center">
    <ul class="nav nav-pills mb20">
      <li class="active bg-danger">
        <a href="#liked-products" data-toggle="tab" class="btn">Products You <%= fa_icon('heart') %></a>
      </li>
      <li class="bg-alert">
        <a href="#found-products" data-toggle="tab" class="btn">Products You <%= fa_icon('search') %></a>
      </li>
    </ul>
  </div>
</div>

<div class="tab-content br-n pn">
  <div id="liked-products" class="tab-pane active">
    <%= products_listing_for @products[:liked], kind: :mini, group: :liked do %>
      <strong>Oh snap!</strong> You seem a bit shy. You need to
      <%= link_to "like some products", page_path("add-products"), class: "alert-link" %>.
      Come on! You'll be famous!
    <% end %>
  </div>
  <div id="found-products" class="tab-pane">
    <%= products_listing_for @products[:found], kind: :mini, group: :found do %>
      <strong>Oh snap!</strong> You seem a bit shy. You need to
      <%= link_to "find some products", page_path("add-products"), class: "alert-link" %>.
      Come on! You'll be famous!
    <% end %>
  </div>
</div>
