<div class="panel">
  <div class="panel-body">
    <div class="row">
      <div class="product-image col-sm-6" data-link="<%= product_path(product) %>">
        <div class="container" style='background-image: url("<%= presenter.cover_image %>")'></div>
      </div>
      <div class="col-sm-6 product-details mb20 text-center">
        <div class="text-center text-info">
          <h1 class="product-name"><%= product.name %></h3>
          <% if product.brand.present? %>
            <h3 class="product-brand text-muted">By <span class="text-dark"><%= product.brand_name %></span></h4>
          <% end %>
        </div>
        <%= presenter.affiliate_link_action_button target: '_blank' %>
      </div>
    </div>
  </div>
</div>
<% if presenter.marked_description.present? %>
  <div class="panel">
    <div class="panel-heading">
      <h3>Description</h3>
    </div>
    <div class="panel-body description">
      <div class='markdown'>
        <%= presenter.marked_description.try :html_safe %>
      </div>
    </div>
  </div>
<% end %>
