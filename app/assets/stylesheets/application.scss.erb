@import 'pages-core/scss/mixins';
@import 'mixins';
@import 'products';
@import 'categories';
@import 'social-share-button';

.clearfix:before, .clearfix:after { content: ""; display: table; }
.clearfix:after { clear: both; }
.clearfix { zoom: 1; }

body.fixed-header .page-container {
  padding-left: 0;
}

.social-share-button {
  margin: 20px 0;
  span {
    font-weight: bold;
    vertical-align: super;
    display: none;
    @media(min-width: 400px) {
      display: inline-block;
    }
  }
  a {
    background-image: none;
    margin: 2px;
    padding: 5px;
    width: 32px;
    height: 32px;
    .fa {
      color: #888;
    }
  }
}

#footer {
  ul.footer-nav, ul.social-links {
    padding-left: 0;
    li {
      display: inline-block;
      padding: 5px 20px 5px 0;
    }
  }
  ul.social-links a { color: #aaa; }

  padding-left: 20px;
  padding-right: 20px;
  @media(min-width: 600px) {
    padding-left: 40px;
    padding-right: 40px;
  }
}

.widget {
  & > div {
    height: 150px;
  }
  .counter {
    position: absolute;
    right: 25px;
    bottom: 40px;
    font-size: 80px;
  }
}
.panel-scrollable {
  overflow-x: hidden;
  overflow-y: auto;
}
.paginator {
  .bg-header {
    width: 100%;
    background: rgba(0,0,0,0.07);
    padding: 10px;
    text-align: center;
    margin: 0;
    border-radius: 0;
    a {
      color: #444;
      font-weight: bold;
    }
  }
}
